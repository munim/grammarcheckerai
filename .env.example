# Environment variables for Grammar Correction Tool

# OpenRouter API Key (required)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Cloudflare Turnstile Secret Key (required for production)
TURNSTILE_SECRET_KEY=your_turnstile_secret_key_here

# Cloudflare Turnstile Site Key (required for production)
NEXT_PUBLIC_TURNSTILE_SITE_KEY=your_turnstile_site_key_here

# Enable or disable Turnstile verification (optional, defaults to true)
NEXT_PUBLIC_TURNSTILE_ENABLED=true

# Application URL
NEXTJS_URL=http://localhost:3000

# OpenRouter Model (optional)
OPENROUTER_MODEL=mistralai/mistral-7b-instruct:free

# Host Port (optional, defaults to 3000)
HOST_PORT=3000